zpool create \
    -o ashift=13 \
    -o listsnapshots=off \
    -O acltype=posixacl \
    -O canmount=off \
    -O compression=zstd \
    -O com.sun:auto-snapshot=true \
    -O dnodesize=auto \
    -O encryption=on \
    -O keyformat=passphrase \
    -O keylocation=prompt \
    -O mountpoint=none \
    -O normalization=formD \
    -O relatime=on \
    -O secondarycache=none \
    -O xattr=sa \
    cake mirror \
    /dev/disk/by-id/ata-Samsung_SSD_870_EVO_1TB_S75BNL0Y701374K \
    /dev/disk/by-id/ata-Samsung_SSD_870_EVO_1TB_S75BNL0Y701381N
