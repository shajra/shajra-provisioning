zfs create \
    -o canmount=off \
    cake/data

zfs create \
    -o canmount=off \
    -o refreservation=180G \
    -o primarycache=none \
    cake/reserved

zfs create -o mountpoint=/home                 cake/data/home
zfs create -o mountpoint=/srv  -o canmount=off cake/data/srv
zfs create                                     cake/data/srv/audio
zfs create                                     cake/data/srv/pictures
zfs create                                     cake/data/srv/nextcloud

